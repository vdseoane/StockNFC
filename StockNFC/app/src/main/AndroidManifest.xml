<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.stocknfc">
    <uses-permission android:name="android.permission.NFC"></uses-permission>
    <uses-feature android:name="android.hardware.nfc" android:required="true"></uses-feature>
    <application
        android:allowBackup="true"
        android:icon="@drawable/nfc"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name=".escritura_activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".lectura_activity">
        </activity>
    </application>

</manifest>